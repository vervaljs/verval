{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "module": "es2015",
        "moduleResolution": "node",
        "paths": {
            "@angular/core": [
                "node_modules/@angular/core"
            ]
        },
        "rootDir": ".",
        "outDir": "dist",   // Transpila de ES2015 a ES5 con ngc y lo coloca en Ã©ste directorio.
        "sourceMap": true,
        "inlineSources": true,
        "target": "es5",
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "files": [
        "index.ts"
    ],
    "angularCompilerOptions": {
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true // No genera los archivos ngfactory.ts
    }
}